@model Idea.Models.Category

@{
    ViewData["Title"] = "Create";
}
<div style="width: 150px; margin-left: auto; margin-right: auto;">
<h1>CREATE</h1>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

<h4>Categories</h4> </div>
<hr />
<div class="d-flex justify-content-center align-items-center min-vh-10">
    <div class="col-md-4">
        <form asp-action="CREATE" class="bg-light border p-3">
            <div asp-validation-summary="ModelOnly" class="text-warning"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label "></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Name" id="Name"/>
                <span asp-validation-for="Name" class="text-warning"></span>
            </div>
            <div class="form-group">
                <input type="SUBMIT" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div></br>
<div style="width:300px; margin-left: auto; margin-right: auto;">
<div>
    <a asp-action="Index" class="btn btn-primary">BACK</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}