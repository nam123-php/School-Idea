@model Idea.Models.Submission

@{
    ViewData["Title"] = "Edit";
}
<div style="width: 150px; margin-left: auto; margin-right: auto;">
<h1>Edit</h1>

<h4>Submission</h4>
</div>
<hr />
<div class="d-flex justify-content-center align-items-center min-vh-10">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-info"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-info"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline_1" class="control-label"></label>
                <input asp-for="Deadline_1" class="form-control" />
                <span asp-validation-for="Deadline_1" class="text-info"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline_2" class="control-label"></label>
                <input asp-for="Deadline_2" class="form-control" />
                <span asp-validation-for="Deadline_2" class="text-info"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="SAVE" class="btn btn-success" class="d-inline-flex flex-column" />
            </div>
        </form>
    </div>
</div>
<div style="width: 427px; margin-left: auto; margin-right: auto;">

<div>
    <a asp-action="Index" class="btn btn-primary">Back</a>
    
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
