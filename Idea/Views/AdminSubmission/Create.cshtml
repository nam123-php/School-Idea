@model Idea.Models.Submission

@{
    ViewData["Title"] = "Create";
}
<div style="width: 150px; margin-left: auto; margin-right: auto;">
<h1>Create</h1>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<h4>Submission</h4></div>
<hr />
<div class="d-flex justify-content-center align-items-center min-vh-10">
    <div class="col-md-4">
        <form asp-action="Create" class="bg-light border p-3">
            <div asp-validation-summary="ModelOnly" class="text-info"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name:</label>
                <input asp-for="Name" class="form-control" placeholder="Enter Name" id="Name" />
                <span asp-validation-for="Name" class="text-info"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline_1" class="control-label">Deadline 1:</label>
                <input asp-for="Deadline_1" class="form-control" />
                <span asp-validation-for="Deadline_1" class="text-info"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline_2" class="control-label">Deadline 2:</label>
                <input asp-for="Deadline_2" class="form-control" />
                <span asp-validation-for="Deadline_2" class="text-info"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="CREATE" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>

    <div style="width: 300px; margin-left: auto; margin-right: auto;">
<div>
    <a asp-action="Index" class="btn btn-primary">BACK</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
